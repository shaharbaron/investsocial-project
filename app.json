{
  "expo": {
    "name": "InvestSocial",
    "slug": "InvestSocial",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./app/assets/ISlogo.jpg",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./app/assets/loading.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires access to your camera to take photos.",
        "NSPhotoLibraryUsageDescription": "This app requires access to your photo library to select photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./app/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
    },
    "web": {
      "favicon": "./app/assets/favicon.png"
    }
  }
}
